{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", "never"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "dist/",
    "*.min.js"
  ]
}
